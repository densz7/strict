/* support */
.support
	min-height 700px
	background-image url(../../images/support_bg.jpg)
	background-repeat no-repeat
	background-position center
	background-size cover
	
	&__title
		margin-top 75px
		margin-bottom 20px
	
	&__text
		margin-bottom 52px

.form
	margin 0 auto
	max-width 555px

.input
	padding-left 25px
	height 60px
	width 100%
	font-size $font-size-text
	color $white
	background-color transparent
	border 1px solid #999
	border-radius 2px
	box-sizing border-box
	outline none
	-webkit-transition all .35s ease
	transition @-webkit-transition
	
	&:focus
		border-color $white
	
:focus
	&::-webkit-input-placeholder
	&:focus::-moz-placeholder /* Firefox 19+ */
	&:focus:-moz-placeholder /* Firefox 18- */
		color $white
		-webkit-transition: all .35s ease;
		transition @-webkit-transition

.form
	&__name
	&__email
		margin-bottom 20px
	
	&__message
		@extend .form__name
		padding 20px 25px
		resize none

.input--height
	height 160px

.form__check
	display none

.label
	font-size $font-size-text
	color $white
	line-height 20px
	cursor pointer
	
	&::after
		position absolute
		top 0
		left 0
		font-family FontAwesome
		font-size 20px
		color #999
		-webkit-transition all .35s ease
		transition @-webkit-transition
			
	&::before
		@extend .label::after
		content '\f0c8'
	
.form__label
	display inline-block
	margin-top 13px
	padding-left 30px
	position relative

.form__check:checked
	+.label::before
		color $white

.label::after
	width 0
	content '\f14a'
	overflow hidden

.form
	&__check:checked
		+ .label::after
			width 25px
	
	&__button
		float right