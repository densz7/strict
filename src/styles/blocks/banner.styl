/* banner */
.banner
	min-height 800px
	text-align center
	color white
	background-image url(../../images/banner_bg.jpg)
	background-repeat no-repeat
	background-size cover
	
	&__title
		margin-top 200px
		padding-right 90px
		padding-bottom 35px
		padding-left @padding-right
		display inline-block
		font-size 120px
		border-bottom 2px solid $blue

	&__slogan
		margin 38px 0 60px 0
		font-size 20px

	&__angle-down
		margin-top 160px
		display inline-block
		font-size 35px
		color $white