.button
	width 180px
	height (@width / 3)
	font-size 18px
	color $white
	background-color transparent
	border 1px solid $blue
	border-radius 2px
	outline none
	-webkit-transition all .4s ease
	transition all .4s ease
	
	&:hover
		background-color $blue
		
	&--font:hover
		font-size (@font-size + 2)
	
	&--size
		width 140px
		height 45px