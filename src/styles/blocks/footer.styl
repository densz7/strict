/* footer */
.footer
	height 90px

.copyright
	font-size $font-size-text
	color #999

.footer__copyright
	margin-top 40px

.footer__social-block
	margin-top 25px
	float right

.social-icon
	display inline-block
	width 40px
	text-align center
	text-decoration none
	line-height 40px
	color $white
	background-color $blue
	border-radius 2px
	-webkit-transition all .4s ease
	transition @-webkit-transition

.social-block__icon
	margin-right 5px
	
	&:last-child
		margin-right 0

.social-icon
	&--facebook:hover
		background-color: #3b5998;
	
	&--twitter:hover
		background-color: #55acee;
	
	&--google:hover
		background-color: #dd4b39;
	
	&--linkedin:hover
		background-color: #0976b4;
	