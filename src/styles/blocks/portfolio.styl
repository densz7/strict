/* portfolio */
.portfolio
	min-height 900px
	
	&__title
		margin-top 80px
		margin-bottom 25px
	
	&__text
		margin-bottom 80px

.showcase
	position relative
	max-width 360px
	max-height 260px

.portfolio__showcase
	margin 0 auto
	margin-bottom 30px

.showcase
	&__filter
		position absolute
		top 0
		width 100%
		height 100%
		background-color rgba($blue, .9)
		-webkit-transform scale(.3)
		transform @-webkit-transform
		opacity 0
		-webkit-transition all.45s ease
		transition @-webkit-transition
	
	&:hover
		.showcase__filter
			-webkit-transform scale(1)
			transform @-webkit-transform
			opacity 1

.icons
	position absolute
	top 50%
	left 50%
	-webkit-transform translate(-50%, -50%)
	transform @-webkit-transform
	
.icon-plus
	padding 10px 12px
	display inline-block
	font-size $font-size-text
	color $white
	border 1px solid $white
	border-radius 2px
	cursor pointer

.icon-link
	@extend .icon-plus
	
.icons__block
	margin-right 10px

.preview
	position absolute
	left 0
	width 100%
	max-height 550px
	z-index 10
	opacity 0
	-webkit-transform translateX(-2000px)
	transform @-webkit-transform
	-webkit-transition all .8s ease
	transform @-webkit-transition
	
	&__close
		position absolute
		top 0
		right 0
		padding 10px 5px
		font-size 20px
		background-color $blue
		color $white
		cursor pointer

.check
	display none
	
	&:checked
		+ .preview
			opacity 1
			-webkit-transform: translateX(0);
			transform @-webkit-transform

.all-showcases
	position relative

.preview__img
	width 100%
	height @width